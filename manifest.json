{
    "name": "Copy Text with URL",
    "version": "1.0",
    "description": "Copy current selected text and current URL",
    "permissions": ["activeTab", "notifications", "<all_urls>"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon_16.png",
            "32": "images/icon_32.png",
            "48": "images/icon_48.png",
            "128": "images/icon_128.png"
        },
        "default_title": "Copy Text with URL"
    },
    "commands": {
        "copy-text-with-url": {
            "suggested_key": {
                "default": "Ctrl+Shift+C",
                "mac": "MacCtrl+Shift+C"
            },
            "description": "Call copyTextWithURL function",
            "global": false
        }
    },
    "icons": {
        "16": "images/icon_128.png",
        "32": "images/icon_128.png",
        "48": "images/icon_128.png",
        "128": "images/icon_128.png"
    },
    "manifest_version": 2
}
